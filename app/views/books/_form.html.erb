<%= form_for @book do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
        </h2>
  
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= f.label :title, "Book title:" %>
      <br>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :genre, "Genre:" %>
      <br>
      <%= f.text_field :genre, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "Please describe the book:" %>
      <br>
      <%= f.text_field :description, class: "form-control" %>
    </div>

   <div class="form-group">
      <%= f.label :location, "Please select the library this book belongs to:" %>
      <br>
      <%= f.collection_select(:library_id, Library.all, :id, :name, prompt: true) %>
    </div>

    <div class="actions">
      <br/>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  
  <% end %> 