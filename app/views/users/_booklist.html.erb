<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Title</strong></td>
      <td><strong>From:</strong></td>
      <td><strong>Return?</strong></td>
    </tr>
    <% @checkouts.each do |co| %>
      <tr>

        <td><%= link_to co.book.title, book_path(co.book) %></td>
        <td><%= link_to co.book.library.name, library_path(co.book.library) %></td>
        <td><%= link_to "Return #{co.book.title}?", return_path(co.book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if @user %>
  <p>
    <%= link_to "Back to index", root_path, {:class => "btn btn-primary"} %>
  </p>
<% end %>