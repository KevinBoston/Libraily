  
  <%= link_to "Sign in with Github:", '/auth/github' %>
  
<%= form_tag('/session', method: :post) do %>

    <div class="form-group">
      <%= label_tag(:username, "Your username:") %>
  
      <%= collection_select(:user, :username, User.all, :username, :username, prompt: "Please select your username from this dropdown") %>
    </div>
  
    <div class="form-group">
      <%= label_tag(:user_password, "Your password:") %>
      <%= password_field_tag(:user_password, nil, class: "form-control") %>
    </div>
  
    <div class="actions">
      <%= submit_tag("Sign In") %>
    </div>
  
  <% end %> 